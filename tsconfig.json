{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ES2021",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
